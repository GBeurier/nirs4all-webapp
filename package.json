{
  "name": "nirs4all-webapp",
  "private": true,
  "version": "0.2.1",
  "type": "module",
  "description": "Unified NIRS analysis desktop application",
  "main": "dist-electron/main.cjs",
  "packageManager": "npm@10.9.4",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "scripts": {
    "dev": "vite",
    "dev:electron": "npm run build:electron-dev && concurrently \"cross-env ELECTRON=true vite\" \"node scripts/wait-and-launch-electron.cjs\"",
    "build:electron-dev": "node scripts/build-electron-dev.cjs",
    "build": "vite build",
    "build:electron": "cross-env ELECTRON=true vite build",
    "start:desktop": "npm run dev:electron",
    "electron:preview": "cross-env ELECTRON_RUN_AS_NODE= electron .",
    "lint": "eslint .",
    "test": "vitest run",
    "type-check": "tsc --noEmit",
    "validate:nodes": "node scripts/validate-node-registry.cjs",
    "test:e2e": "npx playwright test --project=web-chromium",
    "ci:local": "scripts\\ci-local.cmd",
    "ci:local:lint": "scripts\\ci-local.cmd lint",
    "ci:local:test": "scripts\\ci-local.cmd test",
    "ci:local:build": "scripts\\ci-local.cmd build",
    "ci:local:e2e": "scripts\\ci-local.cmd e2e",
    "ci:docker": "bash scripts/ci-test.sh",
    "ci:docker:frontend": "bash scripts/ci-test.sh frontend",
    "ci:docker:backend": "bash scripts/ci-test.sh backend",
    "ci:docker:e2e": "bash scripts/ci-test.sh e2e",
    "ci:docker:lint": "bash scripts/ci-test.sh lint",
    "ci:docker:shell": "bash scripts/ci-test.sh shell",
    "ci:docker:rebuild": "bash scripts/ci-test.sh --rebuild",
    "release": "node scripts/build-release.cjs",
    "release:clean": "node scripts/build-release.cjs --clean"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@fontsource/inter": "^5.2.8",
    "@fontsource/jetbrains-mono": "^5.2.8",
    "@hookform/resolvers": "^5.2.2",
    "@msgpack/msgpack": "^3.1.3",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@sentry/electron": "^7.8.0",
    "@sentry/react": "^10.39.0",
    "@tanstack/react-query": "^5.83.0",
    "@types/three": "^0.182.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "encoding": "^0.1.13",
    "framer-motion": "^12.23.26",
    "i18next": "^25.7.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "lucide-react": "^0.556.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.68.0",
    "react-i18next": "^16.5.1",
    "react-resizable-panels": "^3.0.6",
    "react-router-dom": "^6.30.1",
    "recharts": "2.15.4",
    "regl": "^2.1.1",
    "sonner": "^2.0.7",

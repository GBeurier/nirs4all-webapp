{
  "name": "nirs4all-webapp",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Unified NIRS analysis desktop application",
  "packageManager": "npm@10.9.4",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "scripts": {
    "preinstall": "node scripts/ensure-linux-node.cjs",
    "predev": "node scripts/ensure-linux-node.cjs",
    "dev": "vite",
    "dev:api": "python main.py",
    "dev:registry": "VITE_USE_NODE_REGISTRY=true vite",
    "build": "npm run validate:nodes && tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "validate:nodes": "node scripts/validate-nodes.cjs",
    "setup:wsl": "bash scripts/setup-wsl.sh",
    "desktop": "python launcher.py",
    "desktop:dev": "set VITE_DEV=true && python launcher.py",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },

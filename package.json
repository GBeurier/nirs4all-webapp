{
  "name": "nirs4all-webapp",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Unified NIRS analysis desktop application",
  "main": "dist-electron/main.cjs",
  "packageManager": "npm@10.9.4",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "scripts": {
    "preinstall": "node scripts/ensure-linux-node.cjs",
    "predev": "node scripts/ensure-linux-node.cjs",
    "dev": "vite",
    "dev:api": "python main.py",
    "dev:registry": "cross-env VITE_USE_NODE_REGISTRY=true vite",
    "dev:electron": "npm run build:electron:only && concurrently -k \"vite\" \"node scripts/wait-and-launch-electron.cjs\"",
    "start": "node scripts/launcher-node.cjs start web:dev",
    "start:web": "node scripts/launcher-node.cjs start web:dev",
    "start:web:prod": "node scripts/launcher-node.cjs start web:prod",
    "start:desktop": "node scripts/launcher-node.cjs start desktop:dev",
    "start:desktop:prod": "node scripts/launcher-node.cjs start desktop:prod",
    "stop": "node scripts/launcher-node.cjs stop",
    "restart": "node scripts/launcher-node.cjs restart",
    "clean": "node scripts/launcher-node.cjs clean",
    "status": "node scripts/launcher-node.cjs status",
    "build": "npm run validate:nodes && tsc -b && vite build",
    "build:electron": "npm run validate:nodes && cross-env ELECTRON=true NODE_ENV=production vite build",
    "build:electron:only": "cross-env ELECTRON=true NODE_ENV=production vite build",
    "electron": "npm run dev:electron",
    "electron:preview": "npm run build:electron && electron . --no-sandbox",
    "electron:build": "npm run build:electron && electron-builder",
    "build:backend": "node scripts/build-backend.cjs",
    "build:backend:cpu": "node scripts/build-backend.cjs --flavor cpu",
    "build:backend:gpu": "node scripts/build-backend.cjs --flavor gpu",
    "build:backend:gpu-metal": "node scripts/build-backend.cjs --flavor gpu-metal",
    "build:backend:clean": "node scripts/build-backend.cjs --clean",
    "build:release": "node scripts/build-release.cjs",
    "build:release:cpu": "node scripts/build-release.cjs --flavor cpu",
    "build:release:gpu": "node scripts/build-release.cjs --flavor gpu",
    "build:release:clean": "node scripts/build-release.cjs --clean",
    "build:release:all": "node scripts/build-release.cjs --platform all",
    "build:release:all:cpu": "node scripts/build-release.cjs --platform all --flavor cpu",
    "build:release:all:gpu": "node scripts/build-release.cjs --platform all --flavor gpu",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "validate:nodes": "node scripts/validate-nodes.cjs",
    "validate:registry": "node scripts/validate-node-registry.cjs",
    "generate:extended-registry": "python scripts/generate_extended_registry.py --out public/node-registry/extended.json --validate",
    "generate:registry": "python scripts/generate_registry.py --validate --skip-tensorflow",
    "validate:canonical-registry": "python scripts/generate_registry.py --validate --skip-tensorflow",
    "registry:snapshot": "node scripts/check-registry-snapshot.cjs",
    "registry:snapshot:update": "node scripts/check-registry-snapshot.cjs --update",
    "setup:wsl": "bash scripts/setup-wsl.sh",
    "desktop": "npm run electron",
    "desktop:dev": "npm run dev:electron",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "e2e": "playwright test",
    "e2e:web": "playwright test --project=web-chromium",
    "e2e:desktop": "playwright test --project=desktop-chromium",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "e2e:headed": "playwright test --headed",
    "e2e:report": "playwright show-report",
    "docs:build": "sphinx-build -b html docs/user-guide/source docs/user-guide/build/html",
    "docs:serve": "sphinx-build -b html docs/user-guide/source docs/user-guide/build/html && python -m http.server 8080 -d docs/user-guide/build/html",
    "docs:clean": "node -e \"require('fs').rmSync('docs/user-guide/build',{recursive:true,force:true})\"",
    "docs:screenshots": "node docs/user-guide/take-screenshots.mjs"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@fontsource/inter": "^5.2.8",
    "@fontsource/jetbrains-mono": "^5.2.8",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@tanstack/react-query": "^5.83.0",
    "@types/three": "^0.182.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.26",
    "i18next": "^25.7.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "lucide-react": "^0.556.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.68.0",
    "react-i18next": "^16.5.1",
    "react-resizable-panels": "^3.0.6",
    "react-router-dom": "^6.30.1",
    "recharts": "2.15.4",
    "regl": "^2.1.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.182.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-onboarding": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^22.16.5",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^10.1.11",
    "globals": "^15.15.0",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "storybook": "^10.1.11",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.2.7",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.16"
  }
}
